generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  cpf       String   @unique
  email     String   @unique
  password  String
  role      Role
}

enum Role {
  CLIENT
  ADMIN
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
}